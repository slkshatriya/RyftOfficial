<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsFragment">


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/rift" />




                <TextView
                    android:id="@+id/ProjectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="project title"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="70dp"/>

                <ImageView
                    android:id="@+id/projectImg"
                    android:layout_width="300dp"
                    android:layout_centerInParent="true"
                    android:layout_height="200dp"
                    android:layout_below="@+id/ProjectTitle"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech Used"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_cat_bg"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_alignLeft="@id/logo"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/projectImg"
                    android:layout_marginTop="20dp"
                    android:id="@+id/techUsed1"
                    />

                <TextView
                    android:id="@+id/techUsed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/projectImg"
                    android:layout_marginStart="88dp"
                    android:layout_marginTop="21dp"
                    android:layout_toEndOf="@+id/techUsed1"
                    android:background="@drawable/ic_cat_bg"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Tech Used"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/longDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/techUsed1"
                    android:layout_alignStart="@+id/ProjectTitle"
                    android:layout_marginStart="38dp"

                    android:layout_marginTop="38dp"
                    android:text="Long Description"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/longDescription"
                    android:layout_alignLeft="@+id/ProjectTitle"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/facebook_button_bg"
                    android:padding="8dp"
                    android:text="Enroll Now "
                    android:textColor="#fff" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



</ScrollView>