<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DevFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/rift" />




        <TextView
            android:id="@+id/ProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="project title"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_cat_bg"
            android:gravity="center"
            android:padding="6dp"
            android:layout_alignLeft="@id/logo"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ProjectTitle"
            android:layout_marginTop="30dp"
            android:id="@+id/techUsed1"
            />

        <TextView
            android:id="@+id/techUsed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProjectTitle"
            android:layout_marginStart="88dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/techUsed1"
            android:background="@drawable/ic_cat_bg"
            android:gravity="center"
            android:padding="6dp"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_cat_bg"
            android:gravity="center"
            android:padding="6dp"
            android:layout_alignLeft="@id/logo"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/techUsed1"
            android:layout_marginTop="20dp"
            android:id="@+id/techUsed3"
            />

        <TextView
            android:id="@+id/techUsed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techUsed2"
            android:layout_marginStart="88dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/techUsed1"
            android:background="@drawable/ic_cat_bg"
            android:gravity="center"
            android:padding="6dp"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/longDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techUsed3"
            android:layout_alignStart="@+id/ProjectTitle"
            android:layout_marginTop="38dp"
            android:text="Description1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/longDescription"
            android:layout_alignStart="@+id/ProjectTitle"
            android:layout_marginTop="20dp"
            android:text="Description2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/longDescription1"
            android:layout_alignStart="@+id/ProjectTitle"
            android:layout_marginTop="20dp"
            android:text="Description2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longDescription3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/longDescription2"
            android:layout_alignStart="@+id/ProjectTitle"
            android:layout_marginTop="20dp"
            android:text="Description2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           android:layout_below="@id/longDescription3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/facebook_button_bg"
            android:text="Submit code link"
            android:textColor="#fff" />

        <Button
            android:id="@+id/rCert"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cSubmit"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/facebook_button_bg"
            android:padding="8dp"
            android:text="Request Certificate"
            android:textColor="#fff" />

    </RelativeLayout>


</ScrollView>

