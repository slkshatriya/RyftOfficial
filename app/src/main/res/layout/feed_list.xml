<?xml version="1.0" encoding="UTF-8"?>

<androidx.cardview.widget.CardView
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="5dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/rift" />





        <TextView
            android:id="@+id/ProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="project title"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="187dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"/>

        <ImageView
            android:id="@+id/projectImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/ProjectTitle"
            android:layout_alignStart="@+id/logo"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignLeft="@id/logo"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/projectImg"
            android:layout_marginTop="20dp"
            android:id="@+id/techUsed1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Used"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/techUsed1"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/projectImg"
            android:layout_marginTop="20dp"
            android:id="@+id/techUsed2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long Description"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignStart="@+id/ProjectTitle"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/techUsed1"
            android:layout_marginTop="40dp"
            android:id="@+id/longDescription"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ProjectTitle"
            android:layout_below="@+id/longDescription"
            android:text="See Details "
            android:layout_marginTop="40dp"
            android:id="@+id/seeDetails"
            android:layout_marginLeft="150dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>  
